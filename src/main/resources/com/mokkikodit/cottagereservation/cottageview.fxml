<Pane prefHeight="200.0" prefWidth="976.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mokkikodit.cottagereservation.controller.CottageManager">

    <Pane layoutY="-61.0" prefHeight="508.0" prefWidth="1154.0" style="-fx-background-color: #335170;">
        <Button layoutX="348.0" layoutY="96.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="87.0"
                text="Poista mökki"/>
        <Label layoutX="927.0" layoutY="113.0" prefHeight="17.0" prefWidth="206.0" style="-fx-text-fill: white"
               text="Muokkaa mökkiä - Valitse mökki">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
    </Pane>
    <TableView fx:id="cottageTableView" layoutX="10.0" layoutY="75.0" prefHeight="330.0" prefWidth="900.0">
        <columns>
            <TableColumn fx:id="cottageIdColumn" prefWidth="50" text="ID"/>
            <TableColumn fx:id="ownerIdColumn" prefWidth="70" text="Omistaja"/>
            <TableColumn fx:id="reservedColumn" prefWidth="50" text="Varattu"/>
            <TableColumn fx:id="cottageNameColumn" prefWidth="150" text="Mökin nimi"/>
            <TableColumn fx:id="locationColumn" prefWidth="150" text="Sijainti"/>
            <TableColumn fx:id="priceColumn" prefWidth="80" text="Hinta"/>
            <TableColumn fx:id="areaColumn" prefWidth="80" text="Pinta-ala"/>
            <TableColumn fx:id="capacityColumn" prefWidth="80" text="Majoituskapasiteetti"/>
            <TableColumn fx:id="descriptionColumn" text="Kuvaus"/>
        </columns>
    </TableView>
    <TextField layoutX="10.0" layoutY="35.0" promptText="Etsi Mökki"/>
    <Button layoutX="160.0" layoutY="35.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="41.0" text="Etsi"/>
    <Button fx:id="newCottageButton" layoutX="250" layoutY="35.0" mnemonicParsing="false" prefHeight="25.0"
            prefWidth="80.0" text="Uusi mökki"/>
    <TextField fx:id="ownerIdField" layoutX="920.0" layoutY="75.0" prefHeight="25.0" prefWidth="100.0"
               promptText="Omistajan ID"/>
    <TextField fx:id="cottageNameField" layoutX="1030.0" layoutY="75.0" prefHeight="25.0" prefWidth="100.0"
               promptText="Mökin nimi"/>
    <TextField fx:id="locationField" layoutX="920.0" layoutY="110.0" prefHeight="25.0" prefWidth="100.0"
               promptText="Sijainti"/>
    <TextField fx:id="priceField" layoutX="1030.0" layoutY="110.0" prefHeight="25.0" prefWidth="100.0"
               promptText="Hinta per yö"/>
    <TextField fx:id="areaField" layoutX="920.0" layoutY="145.0" prefHeight="25.0" prefWidth="100.0"
               promptText="Pinta-ala"/>
    <TextField fx:id="capacityField" layoutX="1030.0" layoutY="145.0" prefHeight="25.0" prefWidth="100.0"
               promptText="Vieraita"/>
    <TextArea fx:id="descriptionArea" layoutX="920.0" layoutY="180.0" prefHeight="160.0" prefWidth="214.0"
               promptText="Kuvaus"/>
    <CheckBox fx:id="reservedCheckBox" layoutX="920.0" layoutY="350.0" mnemonicParsing="false" prefHeight="17.0"
              prefWidth="72.0" style="-fx-text-fill: white" text="Varattu"/>
    <Button fx:id="saveChangesButton" layoutX="920.0" layoutY="380.0" mnemonicParsing="false" prefHeight="25.0"
              prefWidth="134.0" text="Tallenna muutokset"/>
</Pane>
