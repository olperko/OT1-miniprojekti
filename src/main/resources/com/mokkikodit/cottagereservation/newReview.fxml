<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.mokkikodit.cottagereservation.controller.NewReviewController"
        prefWidth="350" prefHeight="400">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Arvioinnin tiedot" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label text="Varauksen ID"/>
        <TextField fx:id="reservationIdField" promptText="Varauksen ID"/>
        <Label text="Pisteet 1-5"/>
        <TextField fx:id="scoreField" promptText="Pisteet"/>
        <Label text="Kommentti"/>
        <TextField fx:id="commentField" promptText="Kommentti"/>
        <Label text="Päivämäärä"/>
        <TextField fx:id="dateField" promptText="Päivämäärä"/>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="saveReviewButton" text="Tallenna" defaultButton="true"/>
            <Button fx:id="cancelReviewButton" text="Peruuta" cancelButton="true"/>
        </HBox>
    </VBox>
</AnchorPane>

