<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.mokkikodit.cottagereservation.controller.NewUserController"
        prefWidth="350" prefHeight="400">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Käyttäjän tiedot"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <TextField
                fx:id="firstNameField"
                promptText="Etunimi"/>
        <TextField
                fx:id="lastNameField"
                promptText="Sukunimi"/>
        <TextField
                fx:id="emailField"
                promptText="Sähköposti"/>
        <TextField
                fx:id="phoneNumberField"
                promptText="Puhelinnumero"/>
        <CheckBox
                text="Yritys"
                fx:id="isBusinessCheckBox"/>
        <TextArea
                promptText="Lisätiedot"
                fx:id="additionalInfoField"
                prefRowCount="2"/>

        <HBox spacing="10" alignment="CENTER">

            <Button fx:id="saveButtonUser" text="Tallenna" defaultButton="true"/>
            <Button fx:id="cancelButtonUser" text="Peruuta" cancelButton="true"/>
        </HBox>
    </VBox>
</AnchorPane>

